<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9D00FF"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULADORA DA APROVAÇÃO"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nota1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="#FFED29"
            android:hint="Nota 1"
            android:padding="20dp"
            android:textSize="16dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nota2"
            android:hint="Nota 2"
            android:background="#FFED29"
            android:layout_margin="50dp"
            android:padding="20dp"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nota3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="#FFED29"
            android:hint="Nota 3"
            android:padding="20dp"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/nota4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="#FFED29"
            android:hint="Nota 4"
            android:padding="20dp"
            android:textSize="16dp" />
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Número de Faltas"
        android:id="@+id/numeroFaltas"
        android:background="#FFA500"
        android:padding="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"/>

    <EditText
        android:id="@+id/nomeAluno"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:background="#FFA500"
        android:hint="Nome do aluno: "
        android:padding="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_calcular"
        android:text="Calcular"
        android:background="@color/black"
        android:padding="20dp"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Aluno foi aprovado"
        android:textColor="@color/black"
        android:textSize="20dp" />

</LinearLayout>
